<% layout("/layouts/boilerplate") -%>
    <br><br>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Create a new listing</h3>
    <form
    method="POST"
    action="/listings"
    novalidate class="needs-validation"
    enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="for-label">Title</label>
            <input
            name="listing[title]"
            placeholder="enter title"
            type="text" class="form-control"
            required>
            <div class="invalid-feedback">
                enter a title
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="for-label">Description</label>
            <textarea
            name="listing[description]"
            class="form-control"
            required></textarea>

            <div class="invalid-feedback">
                enter a description
            </div>
        </div>

        <div class="mb-3">
            <label for="image" class="for-label">Upload Listing Image</label>
            <input
            name="listing[image]"
            type="file"
            class="form-control"
            required
            >
        </div>

        <div class="row">
            <div class="mb-3 col-12 col-md-4">
            <label for="price" class="for-label">Price</label>
            <input
            name="listing[price]"
            placeholder="enter price"
            class="form-control"
            required>

            <div class="invalid-feedback">
                enter valid price
            </div>
        </div>
        <div class="mb-3 col-12 col-md-8">
            <label for="country" class="for-label">Country</label>
            <input
            name="listing[country]"
            placeholder="enter country"
            type="text" class="form-control"
            required>

            <div class="invalid-feedback">
                enter the country
            </div>
        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="for-label">Location</label>
            <input
            name="listing[location]"
            placeholder="enter location"
            type="text" class="form-control"
            required>

            <div class="invalid-feedback">
                enter the location
            </div>
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
</div>
</div>